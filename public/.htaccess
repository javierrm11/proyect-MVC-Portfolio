RewriteEngine On

# No redirigir las solicitudes a carpetas de recursos est치ticos (CSS, JS, im치genes, etc.)
RewriteCond %{REQUEST_URI} ^/(styles|css|script|imagenes) [NC]
RewriteRule .* - [L]

# Redirige todo lo dem치s a index.php
RewriteRule ^(.*)$ index.php [L]

# Para manejar la autorizaci칩n (opcional, si es necesario)
